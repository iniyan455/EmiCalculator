<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"

        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways"
        app:theme="@style/MyToolbarTheme"
        app:title="@string/app_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/principal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:hint="@string/principal"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp"
                        app:met_autoValidate="true"
                        app:met_bottomTextSize="8dp"
                        app:met_clearButton="true"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelPadding="8dp"
                        app:met_floatingLabelText="@string/principal"
                        app:met_floatingLabelTextColor="@android:color/black"
                        app:met_floatingLabelTextSize="14dp"
                        app:met_helperText="@string/principal"
                        app:met_helperTextAlwaysShown="false"
                        app:met_helperTextColor="@android:color/background_dark"

                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/white" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:hint="@string/rate"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp"
                        app:met_autoValidate="true"
                        app:met_bottomTextSize="8dp"
                        app:met_clearButton="true"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelPadding="8dp"
                        app:met_floatingLabelText="@string/rate"
                        app:met_floatingLabelTextColor="@android:color/black"
                        app:met_floatingLabelTextSize="14dp"
                        app:met_helperText="ROI"
                        app:met_helperTextAlwaysShown="false"
                        app:met_helperTextColor="@android:color/background_dark"

                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:hint="@string/duration"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp"
                        app:met_autoValidate="true"

                        app:met_bottomTextSize="8dp"
                        app:met_clearButton="true"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelAlwaysShown="true"
                        app:met_floatingLabelAnimating="true"
                        app:met_floatingLabelPadding="8dp"
                        app:met_floatingLabelText="@string/duration"
                        app:met_floatingLabelTextColor="@android:color/black"
                        app:met_floatingLabelTextSize="14dp"
                        app:met_helperText="Duration"
                        app:met_helperTextAlwaysShown="false"
                        app:met_helperTextColor="@android:color/background_dark"

                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RadioButton

                            android:id="@+id/year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/holo_blue_bright"
                            android:checked="true"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Year"
                            android:textSize="12sp" />

                        <RadioButton

                            android:id="@+id/month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/holo_blue_bright"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Month"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Button
                        android:id="@+id/btnprincipal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"

                        android:background="@android:color/holo_purple"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Principal"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnemi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_light"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="12sp"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:layout_marginRight="16dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Button
                        android:id="@+id/totalpay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"

                        android:background="@android:color/holo_orange_dark"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Total Pay"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/percent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"

                        android:background="@android:color/holo_blue_bright"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Percent"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@android:color/holo_blue_bright"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"


                            android:layout_weight="1.2"
                            android:text="Opening Amt"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:text="Interest"

                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"

                            android:text="Amt Pay"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Closing Bal"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/card_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fitsSystemWindows="true"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>